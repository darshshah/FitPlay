<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_add_cardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_new_strength"
        android:layout_alignLeft="@+id/button_new_strength"
        android:layout_alignRight="@+id/button_new_strength"
        android:layout_marginBottom="34dp"
        android:text="Cardio Training" />

    <Button
        android:id="@+id/button_new_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="178dp"
        android:minWidth="200dip"
        android:text="Weight Training" />

</RelativeLayout>