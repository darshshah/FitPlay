<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fp.fit_play.NewGroup"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
         android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Group"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:singleLine="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" >
	
	        <EditText
	            android:id="@+id/newgroupname"
	            android:layout_width="250dp"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/doneaddingmembers"
	            android:ems="10"
	            android:hint="Group Name" >
	
	            <requestFocus android:layout_height="wrap_content" />

	        </EditText>

	        <Button
	            android:id="@+id/doneaddingmembers"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:text="Done" />

	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/newgroupname"
	            android:layout_marginTop="22dp"
	            android:text="Select Members"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
           


                <ListView
                    android:id="@+id/listnewgroup"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
     				android:layout_marginTop="100dp">
                    

                </ListView>
        
		</RelativeLayout>

            </LinearLayout>



       
</FrameLayout>

